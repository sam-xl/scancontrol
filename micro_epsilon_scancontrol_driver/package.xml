<?xml version="1.0"?>
<package format="2">
  <name>micro_epsilon_scancontrol_driver</name>
  <version>0.0.1</version>
  <description>Micro Espsilon scanCONTROL sensor driver</description>
  <maintainer email="r.tonnear@tudelft.nl">Rik Tonnear</maintainer>
  <maintainer email="d.kroezen@tudelft.nl">Dave Kroezen</maintainer>

  <url type="repository">https://github.com/sam-xl/scancontrol</url>

  <license>Apache 2.0</license>

  <buildtool_depend>catkin</buildtool_depend>
  
  <depend>roscpp</depend>
  <depend>rospy</depend>

  <depend>rqt_gui</depend>
  <depend>rqt_gui_py</depend>
  <depend>pcl_ros</depend>
  <depend>nodelet</depend>

  <depend>micro_epsilon_scancontrol_msgs</depend>

  <export>
    <nodelet plugin="${prefix}/me_scancontrol_nodelet.xml"/>
    <rqt_gui plugin="${prefix}/me_scancontrol_gui.xml"/>
  </export>
</package>
